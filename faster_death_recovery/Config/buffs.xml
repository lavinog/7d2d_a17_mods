<configs>

	<!-- Create new buffNearDeathTraumaCured status that accelerates
  NearDeathTraumaReduction and removes the buff at the end of the duration.
	Default duration is 10 mins (600s)
	-->
	<insertAfter xpath="/buffs/buff[@name='buffNearDeathTrauma']">
		<buff name="buffNearDeathTraumaCured"
          name_key="buffNearDeathTraumaName"
          description_key="buffNearDeathTraumaDesc"
          tooltip_key="buffNearDeathTraumaTooltip"
          icon="ui_game_symbol_near_death_trauma"
          icon_color="0,128,255"
          remove_on_death="true">
			<stack_type value="ignore"/>

			<!-- Adjust the following duration in seconds as needed. -->
			<duration value="600"/>

			<effect_group>
				<triggered_effect trigger="onSelfBuffStart" action="LogMessage"
            message="buffNearDeathTraumaCured : onSelfBuffStart"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar"
            target="self" cvar="NearDeathTraumaReduction" operation="multiply"
            value="5"/>
				<triggered_effect trigger="onSelfBuffStart" action="CVarLogValue"
            target="self" cvar="NearDeathTraumaReduction"/>
				<triggered_effect trigger="onSelfBuffRemove" action="LogMessage"
            message="buffNearDeathTraumaCured : onSelfBuffRemove"/>
				<triggered_effect trigger="onSelfBuffRemove" action="RemoveBuff"
            target="self" buff="buffNearDeathTrauma"/>
			</effect_group>
		</buff>
	</insertAfter>


	<!-- Add effect to buffDrugVitamins. -->
	<append xpath="/buffs/buff[@name='buffDrugVitamins']/effect_group">
		<triggered_effect trigger="onSelfBuffStart" action="AddBuff"
        target="self" buff="buffNearDeathTraumaCured">
			<requirement name="HasBuff" buff="buffNearDeathTrauma"/>
    </triggered_effect>

	</append>
	<!-- Add effect to buffDrunkGrandpasMoonshine. -->
	<append xpath="/buffs/buff[@name='buffDrunkGrandpasMoonshine']/effect_group">
		<triggered_effect trigger="onSelfBuffStart" action="AddBuff"
        target="self" buff="buffNearDeathTraumaCured">
			<requirement name="HasBuff" buff="buffNearDeathTrauma"/>
    </triggered_effect>
	</append>

</configs>
